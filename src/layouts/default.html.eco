<style>

.schedule-day {
    width: 20%;
    min-height: 2.5em;
    border-radius: 5px;
    text-align: center !important;
    user-select: none;
}

.schedule-day:hover {
    cursor: pointer;
    background: rgba(255, 208, 32, .2);
}

.schedule-day

</style>

<script>

function select_sched(col, i) {
    if (typeof(selected_sched) != 'undefined') {
        selected_sched.style.background = '';
    }
    selected_sched = col;
    selected_sched.style.background = 'rgba(255, 128, 0, .2)';
    for (var i_ in col.parentElement.children) {
        sched_rows = document.getElementsByClassName('day'+i_+'sched_tbody');
        Array.from(sched_rows).forEach(
                function(row, index, array) {
                    if (i == i_) {
                        row.style.display = 'table-row';
                    } else {
                        row.style.display = 'none';
                    }
                }
            );
        /*
        for (var row of sched_rows) {
            if (i == i_) {
                row.style.display = 'table-row';
            } else {
                row.style.display = 'none';
            }
        }
        */
    }
}

</script>

<!-- / WORST DESIGN DECISIONS EVER WARNING -->

</head>
<body>

  <div class="global">

    <%-@partial('nav.html.eco', @)%>
    <%-@partial('header.html.eco', @)%>

    <!-- CONTENT -->
    <div class="content" id="content">
      <div class="wrapper">
        <%- @content %>
        <!-- FOOTER -->
        <footer class="footer">
          <p>Made with â™¥ by <a href="https://github.com/braziljs/conf-boilerplate" target="_blank">Conf Boilerplate</a> :)</p>
        </footer>
        <!-- / FOOTER -->
      </div>
    </div>
    <!-- / CONTENT -->

  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="<%= @getTheme() %>/js/jquery.js"><\/script>')</script>

  <% if @conf.address != '': %>
  <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <script src="<%= @getTheme() %>/js/main.js"></script>
  <% end %>

  <!-- GOOGLE ANALYTICS -->
  <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= @site.googleanalytics %>']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  </script>
  <!-- /GOOGLE ANALYTICS -->

  <script>
select_sched(document.getElementsByClassName("schedule-day")[0], 0);
  </script>

</body>
</html>
